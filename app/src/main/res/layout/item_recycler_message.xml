<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageItem_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messageItem_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/default_profile" />

    <TextView
        android:id="@+id/messageItem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/messageItem_message"
        app:layout_constraintStart_toEndOf="@id/messageItem_profile"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="이름" />

    <TextView
        android:id="@+id/messageItem_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/messageItem_time"
        app:layout_constraintStart_toEndOf="@id/messageItem_profile"
        app:layout_constraintTop_toBottomOf="@id/messageItem_name"
        tools:text="메세지" />

    <TextView
        android:id="@+id/messageItem_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/messageItem_profile"
        app:layout_constraintTop_toBottomOf="@id/messageItem_message"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="시간" />


</androidx.constraintlayout.widget.ConstraintLayout>